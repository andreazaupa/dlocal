!!!
%html
  %head
    %title Dlocale
    =# stylesheet_link_tag :all
    = stylesheet_link_tag 'screen.css', :media => 'screen, projection'
    = stylesheet_link_tag 'print.css', :media => 'print'
    /[if lt IE 8]
      = stylesheet_link_tag 'ie.css', :media => 'screen, projection'
    = javascript_include_tag :defaults
    = csrf_meta_tag
    
  %body
    #header
      #logo
        %h1="D-Locales"
    #container
      #flash
        %p.notice= notice
        %p.alert=alert
 
      #content= yield
      #sidebar
        .nav      
          =link_to "files","/locale_files",:class=>"button button_nav"
          =link_to "organizations","/organizations",:class=>"button button_nav"
